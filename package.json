{
  "name": "recipe-to-list",
  "version": "1.0.0",
  "description": "Convert recipes to shopping lists",
  "repository": {
    "type": "git",
    "url": "git://github.com/scwood/recipe-to-list.git"
  },
  "scripts": {
    "build": "webpack -p && babel src/server -d dist",
    "coverage": "istanbul cover _mocha -- --recursive --compilers js:babel-register",
    "lint": "eslint src test --ext .js,.jsx",
    "production": "npm run build && node dist/index.js",
    "start": "npm run start-client & npm run start-server",
    "start-client": "webpack-dev-server --progress",
    "start-server": "nodemon src/server/index.js --exec babel-node --ignore src/client",
    "test": "mocha --recursive --compilers js:babel-register || true"
  },
  "author": "Spencer Wood",
  "license": "ISC",
  "dependencies": {
    "babel-tape-runner": "^2.0.1",
    "bcrypt": "^0.8.5",
    "body-parser": "^1.15.0",
    "cookie-parser": "^1.4.1",
    "express": "^4.13.4",
    "express-session": "^1.13.0",
    "lodash": "^4.9.0",
    "mongoose": "^4.4.11",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "react": "^0.14.8",
    "react-dom": "^0.14.8"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.7.2",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "faucet": "0.0.1",
    "html-webpack-plugin": "^2.15.0",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "^2.4.5",
    "mockgoose": "^6.0.0",
    "nodemon": "^1.9.1",
    "react-hot-loader": "^1.3.0",
    "supertest": "^1.2.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  }
}
